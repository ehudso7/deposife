# Deposife Environment Configuration
# Copy this file to .env.local and fill in your values

# Application
NODE_ENV=production
APP_NAME=Deposife
APP_URL=https://deposife.com
API_URL=https://api.deposife.com

# Database (Supabase/PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/deposife

# Redis (Upstash)
REDIS_URL=redis://default:password@host:6379

# Authentication
JWT_SECRET=generate-a-secure-random-string
JWT_REFRESH_SECRET=generate-another-secure-random-string
SESSION_SECRET=generate-yet-another-secure-random-string

# Email (SendGrid/Resend)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@deposife.com

# Payment Processing (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_live_your-key
STRIPE_SECRET_KEY=sk_live_your-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# File Storage (AWS S3 / Cloudflare R2)
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=deposife-uploads

# Push Notifications (FCM)
FCM_SERVER_KEY=your-fcm-server-key

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# Error Monitoring (Sentry)
SENTRY_DSN=https://your-key@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Feature Flags
ENABLE_MOBILE_APP=true
ENABLE_PAYMENT_PROCESSING=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
ALLOWED_ORIGINS=https://deposife.com,https://app.deposife.com
CORS_ENABLED=true
HELMET_ENABLED=true